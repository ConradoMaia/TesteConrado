@model CadastroDeUsinas.Models.Usina

@{
    ViewData["Title"] = "Create";
}
<nav class="border-bottom">
    <h6>Cadastro de Usinas</h6>
</nav>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group form-check">
            <label class="form-check-label">
                <input class="form-check-input" asp-for="IsAtivo" /> @Html.DisplayNameFor(model => model.IsAtivo)
            </label>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UcDaUsina" class="control-label"></label>
                <input asp-for="UcDaUsina" class="form-control" />
                <span asp-validation-for="UcDaUsina" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NomeFornecedor" class="control-label"></label>
                <input asp-for="NomeFornecedor" class="form-control" />
                <span asp-validation-for="NomeFornecedor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input class="btn btn-success" type="submit" value="Salvar"/>
                 &nbsp;
                <a class="btn btn-danger" asp-action="Index">Fechar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
